@using OnlineShop2022.Areas.Admin.Models
@model IEnumerable<ManageUserRoleViewModel>
@{
    ViewData["Title"] = "Manage";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage @Model.FirstOrDefault().User.Fname 's Roles</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].User"/>
                    <input type="hidden" asp-for="@Model[i].Role"/>
                    <input class="form-check-input" type="checkbox" asp-for="@Model[i].IsInRole">
                    <label class="form-check-label">
                        @Model[i].Role.Name
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button class="btn btn-success" type="submit">Update</button>
            <a class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>



